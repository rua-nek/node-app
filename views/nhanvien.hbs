<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-2">
            <ul class="list-group">
                <li class="list-group-item"><a href="/ncc">Quản lý nhà cung cấp</a></li>
                <li class="list-group-item"><a href="/vatlieu">Quản lý vật liệu</a></li>
                <li class="list-group-item"><a href="/hopdong">Quản lý hợp đồng</a></li>
                <li class="list-group-item"><a href="/duan">Quản lý dự án</a></li>
                <li class="list-group-item"><a href="/nhanvien">Quản lý nhân viên</a></li>
            </ul>
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-6">
                    <h2>Nhân viên</h2>
                </div>
                <div class="col-6">
                    <button onclick="window.location.href='/nhanvien/add-nhanvien'" class="btn btn-primary">Thêm</button>
                </div>

            </div>
            <div class="row">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Mã NV</th>
                            <th scope="col">Ten NV</th>
                            <th scope="col">Giới Tính</th>
                            <th scope="col">Địa Chị</th>
                            <th scope="col">Số Điện Thoại</th>
                            <th scope="col">Email</th>
                            <th scope="col">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <th scope="row">{{@index}}</th>
                            <td>{{MaNV}}</td>
                            <td>{{TenNV}}</td>
                            <td>{{GioiTinh}}</td>
                            <td>{{DiaChi}}</td>
                            <td>{{SoDienThoai}}</td>
                            <td>{{Email}}</td>
                            <td>
                                <button onclick="window.location.href='/nhanvien/edit/{{_id}}'" class="btn btn-primary">Sửa</button>
                                <button onclick="window.location.href='/nhanvien/delete/{{_id}}'" class="btn btn-danger">Xóa</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>